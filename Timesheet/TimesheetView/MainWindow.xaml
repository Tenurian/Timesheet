                    <RadioButton GroupName="Day1" HorizontalAlignment="Right" Margin="6px">V</RadioButton>
                </Grid>
                <TextBox x:Name="HD1" HorizontalAlignment="Center" Width="173" Height="27" VerticalAlignment="Bottom" TextCompositionManager.TextInput="HD1_TextChanged" />
